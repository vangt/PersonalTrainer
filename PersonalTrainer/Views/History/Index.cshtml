@model PersonalTrainer.ViewModels.HistoryViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Weight History</h2>

<img src="@Url.Action("WeightChart", "History")" height="400" width="600" />


<table class="table table-bordered table-hover" ">
    <thead>
        <tr>
            <th>Weight History</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <th>Date</th>
            <th>Weight</th>

        </tr>
        @foreach (var date in Model.ProfileList)
        {
            <tr>
                <td>@date.DateOfLog.Value.ToString("MM-dd-yyyy")</td>
                <td>@date.Weight</td>
            </tr>
        }
    </tbody>
</table>