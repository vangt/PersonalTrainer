@model PersonalTrainer.ViewModels.WeightViewModel
@{
    Layout = null;
}

@{
    var myChart = new Chart(width: 600, height: 400)
    .AddTitle("Weight")
    .AddSeries(
    name: "Goals",
    chartType: "bar",
    xValue: new[] { Model.Weight.First(), Model.User.GoalWeight },
    yValues: new[] { Model.User.Weight })
    .Write();
}